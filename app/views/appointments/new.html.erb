<h1>New Appointments Page</h1>

<%= form_for @appointment do |f| %>
  
  <%= f.label :date %>
  <%= f.date_field :date %>

  <%= f.label :time %>
  <%= f.time_field :time %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.hidden_field :homeowner_id, value: @homeowner.id %>
  <%= f.collection_select :service_id, @services, :id, :name %>
  <%= f.submit %>
  <% end %>
