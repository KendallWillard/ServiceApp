</body>
<% if @verify_password == false %>
   <h1>ERROR! Passwords must match!</h1>
<% end %>

<%= form_for @service_provider do |f| %>
  <br><br>
  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <br><br>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :street_name %>
  <%= f.text_field :street_name %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :state %>
  <%= f.text_field :state %>

  <%= f.label :zipcode %>
  <%= f.text_field :zipcode %>
  <br><br>
  <%= f.label :image_url %>
  <%= f.text_field :image_url %>
  <br>
  <%= f.label :service_area %>
  <%= f.text_field :service_area %>

  <%= f.label :years_in_service %>
  <%= f.text_field :years_in_service %>

  <%= f.label :service_provider_type %>
  <%= f.text_field :service_provider_type %>

  <br><br>
  <%= label_tag "Services Offered" %>

  <%= f.collection_check_boxes(:service_ids, @services, :id, :name) do |b| %>
  <ul>
    <li><%= b.label {b.check_box + b.text } %></li>
  </ul>
  <% end %>

  <%= f.submit "Add Service Provider" %>
<% end %>
